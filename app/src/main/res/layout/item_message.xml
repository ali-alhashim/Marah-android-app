<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/rounded_card_shape"
    android:layout_margin="10dp"
    android:id="@+id/postCardLayout"
    android:padding="8dp">



    <LinearLayout
        android:padding="8dp"
        android:id="@+id/postTextLayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/messageFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text=" المرسل : علي"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/messageSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="بكم تبيع"
            android:textColor="@color/black"
            android:textStyle="normal" />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/messageDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="December - 26 - 2023"
            android:textColor="@color/black"
            android:textStyle="normal" />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/messageReadDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="December - 26 - 2023"
            android:textColor="@color/black"
            android:textStyle="normal" />




    </LinearLayout>



</LinearLayout>
