<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/d_post_layout"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_card_shape"
        android:layout_margin="25dp"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:textColor="@color/black"
            android:id="@+id/d_post_subject"
            android:layout_width="match_parent"
            android:text="here post subject"
            android:textStyle="bold"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/black"
            android:id="@+id/d_post_createdby"
            android:layout_width="match_parent"
            android:text="here CreateBy"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/black"
            android:id="@+id/d_post_path"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:text="مراح الابل / المهاجيم / 5"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/d_post_location"
            android:layout_width="match_parent"
            android:text="الرياض"
            android:padding="5dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:textSize="1dp"
            android:background="@color/extra_dark_primary"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/black"
            android:id="@+id/d_post_text"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:text="هنا نص الاعلان"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</FrameLayout>