<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PostDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/scrollLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="5dp"
            android:id="@+id/d_post_root_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



    <LinearLayout
        android:id="@+id/d_post_layout"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_card_shape"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">



        <TextView
            android:textColor="@color/black"
            android:id="@+id/d_post_subject"
            android:layout_width="match_parent"
            android:text="here post subject"
            android:textStyle="bold"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/black"
            android:id="@+id/d_post_createdby"
            android:layout_width="match_parent"
            android:text="here CreateBy"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/black"
            android:id="@+id/d_post_path"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:text="مراح الابل / المهاجيم / 5"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/d_post_location"
            android:layout_width="match_parent"
            android:text="الرياض"
            android:padding="5dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:textSize="1dp"
            android:background="@color/extra_dark_primary"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/black"
            android:id="@+id/d_post_text"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:text="هنا نص الاعلان"
            android:layout_height="wrap_content"/>



    </LinearLayout>

            <LinearLayout
                android:background="@drawable/rounded_card_shape"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">
                <!--post tools-->
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.Icon"
                   android:text="بلاغ"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/extra_dark_primary"
                    app:icon="@drawable/baseline_report_24"
                    app:iconGravity="end"
                    app:backgroundTint="@color/black"
                />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:text="تفضيل"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/extra_dark_primary"
                    app:icon="@drawable/baseline_star_24"
                    app:iconGravity="end"
                    app:backgroundTint="@color/black"
                    />
                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:text="مراسلة"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/extra_dark_primary"
                    app:icon="@drawable/baseline_send_24"
                    app:iconGravity="end"
                    app:backgroundTint="@color/black"
                    />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


            </LinearLayout>

        </LinearLayout><!--Master -->


    </ScrollView>

</FrameLayout>