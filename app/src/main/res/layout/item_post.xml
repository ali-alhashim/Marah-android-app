<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/Beige"
    android:layout_margin="10dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/postImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        android:background="@color/extra_dark_primary"/>

    <LinearLayout
        android:padding="8dp"
        android:id="@+id/postTextLayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/postTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="عنوان الإعلان"
        android:textStyle="bold" />

        <TextView
            android:layout_marginTop="14dp"
            android:id="@+id/postPathTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text=" 3 / مراح الابل / المجاهيم"
            android:textStyle="normal" />

        <TextView
            android:padding="5dp"
            android:background="@color/extra_dark_primary"
            android:textColor="@color/black"
            android:layout_marginTop="14dp"
            android:id="@+id/postInfoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="نعيرية Nov. 26, 2023, 7:46 p.m. ali 0"
            android:textStyle="normal" />

    </LinearLayout>



</LinearLayout>
