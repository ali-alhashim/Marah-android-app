<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/rounded_card_shape"
    android:layout_margin="10dp"
    android:id="@+id/postCardLayout"
    android:padding="8dp">

    <ImageView
        android:scaleType="fitCenter"
        android:id="@+id/postImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_shape"/>

    <LinearLayout
        android:padding="8dp"
        android:id="@+id/postTextLayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/postTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="عنوان الإعلان"
        android:textColor="@color/black"
        android:textStyle="bold" />

        <TextView
            android:layout_marginTop="14dp"
            android:id="@+id/postPathTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text=" 3 / مراح الابل / المجاهيم"
            android:textColor="@color/black"
            android:textStyle="normal" />


        <TableLayout
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TableRow>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_person_pin_24"/>

            <TextView
                android:padding="5dp"
                android:textColor="@color/black"
                android:id="@+id/postCreatedByTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="Ali"
                android:textStyle="normal" />
            </TableRow>
            <TableRow>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"

                android:src="@drawable/baseline_location_on_24"/>
                <TextView
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:id="@+id/postLocationTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="الرياض"
                    android:textStyle="normal" />
            </TableRow>

            <TableRow>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"

                    android:src="@drawable/baseline_date_range_24"/>
                <TextView
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:id="@+id/postCreatedDateTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="Novamber 26, 2023 at 9:00 AM"
                    android:textStyle="normal" />
            </TableRow>

        </TableLayout>

    </LinearLayout>



</LinearLayout>
